module Rewards::CentralizedRewardSystem {

    use aptos_framework::signer;
    use aptos_framework::coin;
    use aptos_framework::aptos_coin::AptosCoin;

    /// Struct to store reward points for a user
    struct RewardWallet has store, key {
        points: u64,
    }

    /// Function to initialize a wallet for the user
    public fun init_wallet(user: &signer) {
        assert!(!exists<RewardWallet>(signer::address_of(user)), 1);
        let wallet = RewardWallet { points: 0 };
        move_to(user, wallet);
    }

    /// Function to deposit reward points into the wallet
    public fun deposit_points(user: &signer, points: u64) acquires RewardWallet {
        let wallet = borrow_global_mut<RewardWallet>(signer::address_of(user));
        wallet.points = wallet.points + points;
    }
}
